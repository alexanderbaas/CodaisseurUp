<div class="container">
<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", events_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", events_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-7">
    <div class="panel panel-danger">
      <div class="panel-heading">
        Your Listings
        </div>

      <div class="panel-body">
        <% @events.each do |event| %>
        <div class="row">
          <div class="col-md-12">
            <h4><%= event.name %></h4>
          <% end %>
          <%= link_to "Add new place", new_event_path, class: "btn btn-danger" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
